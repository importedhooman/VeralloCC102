#include <stdio.h>


//U=3
int main() {
    int i, j;
    for(i = 1; i <= 5; i++) { 
        for(j = 1; j <= i; j++) {
            printf("%d", j);
        }
        printf("\n");
    }
    return 0;
}


//U = 4
#include <stdio.h>

int main() {
    int i, j, num = 1;
    for(i = 1; i <= 4; i++) { 
        for(j = 1; j <= 4; j++) {
            printf("%d ", num++);
        }
        printf("\n");
    }
    return 0;
}


//U = 5
#include <stdio.h>

int main() {
    int i, j;
    for(i = 5; i >= 1; i--) {
        for(j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}


//U = 6
#include <stdio.h>

int main() {
    int num = 8, i;
    for(i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", num, i, num * i);
    }
    return 0;
}


//U = 7
#include <stdio.h>

int main() {
    int n = 21, first = 0, second = 1, next, i;
    for(i = 1; i <= n; i++) {
        printf("%d ", first);
        next = first + second;
        first = second;
        second = next;
    }
    return 0;
}